<Window x:Class="ToL.ClassStats.UI.ClassHistory"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Class History" Height="450" Width="290" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid Background="#FF2D2D30">
        <ComboBox x:Name="cboClasses" FontSize="12" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="255" SelectionChanged="cboClasses_SelectionChanged"/>
        <Label Content="Faction:" Margin="10,37,0,0" />
        <Label Content="Times Played:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,80,0,0"/>
        <Label x:Name="lblFaction" HorizontalContentAlignment="Right" Margin="140,37,0,0"/>
        <Label x:Name="lblTimesPlayed" HorizontalContentAlignment="Right" Margin="140,80,0,0"/>
        <DataGrid x:Name="dgvClassData" HorizontalAlignment="Left" Height="278" Margin="10,123,0,0" VerticalAlignment="Top" Width="255" CanUserAddRows="False" SelectionMode="Single" IsReadOnly="True" HeadersVisibility="None" GridLinesVisibility="None" AlternatingRowBackground="LightGray"/>
    </Grid>
</Window>
